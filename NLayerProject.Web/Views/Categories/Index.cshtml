@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>
<a class="btn btn-primary mb-3" asp-action="Create">Kategöri ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>@item.Id</th>
            <th>@item.Name</th>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>


            </td>
        </tr>

        }

    </tbody>



</table>


